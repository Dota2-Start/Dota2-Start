{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dota2 Strat",
  "identifier": "com.Dota2-Strat.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3680",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { 
        "title": "Dota2 Strat",
        "width": 1246,
        "height": 702,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "center": true,
        "resizable": true,
        "minHeight": 572,
        "minWidth": 360
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": ["locale/*","gMod/*"] ,
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "installMode":"both",
        "displayLanguageSelector": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}